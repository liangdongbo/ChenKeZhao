<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="336dp"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvFormula"
            android:layout_width="230dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/tv_dialog"
            android:textColor="@color/app_text_tip"
            android:textSize="50sp"
            android:gravity="center"/>
        <TextView
            style="@style/AudioFileInfoOverlayText"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textSize="40dp"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:gravity="bottom"
            android:text="@string/app_go_equal"/>
        <TextView
            android:id="@+id/tvShowHelp"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:gravity="bottom"
            android:textSize="50sp"
            android:background="@android:drawable/ic_menu_help"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:orientation="vertical"
        android:background="@drawable/panel">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnI_1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/btn_gray"
                />
            <ImageButton
                android:id="@+id/btnI_2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="33dp"
                android:background="@drawable/btn_red"
                />
            <ImageButton
                android:id="@+id/btnI_3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="34dp"
                android:background="@drawable/btn_green"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnI_4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/btn_khaki"
                />
            <ImageButton
                android:id="@+id/btnI_5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="33dp"
                android:background="@drawable/btn_violet"
                />
            <ImageButton
                android:id="@+id/btnI_6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="34dp"
                android:background="@drawable/btn_blue_green"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnI_7"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/btn_white"
                />
            <ImageButton
                android:id="@+id/btnI_8"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="33dp"
                android:background="@drawable/btn_yellow"
                />
            <ImageButton
                android:id="@+id/btnI_9"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="34dp"
                android:background="@drawable/btn_watchet"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/app_go_squaredUp"/>
    <TextView
        android:id="@+id/recordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_margin="0sp"
        android:textColor="#ff0000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/textNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
