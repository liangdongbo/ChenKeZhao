<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/spider_item_cover"
        android:layout_gravity="left"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        app:riv_border_color="#fff"
        app:riv_border_width="1dp"
        app:riv_corner_radius="8dp"
        app:riv_oval="false" />
    <TextView
        android:id="@+id/spider_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/spider_item_cover"
        android:textColor="#000000"
        android:layout_marginLeft="10sp"
        android:text="啥啥"/>
    <TextView
        android:id="@+id/spider_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spider_item_title"
        android:layout_toRightOf="@id/spider_item_cover"
        android:layout_margin="10sp"
        android:text="kwkwkwkwkkwkw哈哈"/>
    <TextView
        android:id="@+id/spider_item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spider_item_content"
        android:layout_toRightOf="@id/spider_item_cover"
        android:gravity="right"
        android:layout_marginRight="30sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:text="2天前"/>
    <TextView
        android:id="@+id/spider_item_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>
</RelativeLayout>
