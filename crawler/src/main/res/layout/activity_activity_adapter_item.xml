<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/spider_item_cover"
        android:layout_gravity="left"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/ic_launcher"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/spider_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/spider_item_cover"
        android:textColor="#000000"
        android:layout_marginLeft="10sp"
        android:text="啥啥"/>
    <TextView
        android:id="@+id/spider_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spider_item_title"
        android:layout_toRightOf="@id/spider_item_cover"
        android:layout_margin="10sp"
        android:text="kwkwkwkwkkwkw哈哈"/>
    <TextView
        android:id="@+id/spider_item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spider_item_content"
        android:layout_toRightOf="@id/spider_item_cover"
        android:gravity="right"
        android:layout_marginRight="30sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:text="2天前"/>
</RelativeLayout>
