<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="5sp">

    <com.ckz.demo.widget.CircleImageView
        android:id="@+id/ms_item_icon"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="50dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/abc_btn_radio_to_on_mtrl_015"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ms_item_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="哈哈"
            android:textColor="#3c3c3c"
            android:textSize="25sp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/ms_item_text_sub"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="哈哈哈哈哈哈哈哈哈哈..."
            android:textColor="#919191"
            android:textSize="20sp"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/ms_item_flag"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:background="@drawable/list_item_next"/>
</LinearLayout>